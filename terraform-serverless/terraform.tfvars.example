# Example Terraform Variables for Serverless Stack
# Copy this file to terraform.tfvars and update with your values

aws_region  = "us-east-1"
environment = "prod"

# Domain Configuration
domain_name          = "your-domain.com"
frontend_domain_name = "your-domain.com"  # or app.your-domain.com
api_domain_name      = "api.your-domain.com"

# SSL Certificate ARN (must be in us-east-1 for CloudFront)
# Create certificate in ACM first, then paste ARN here
certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Application Configuration
frontend_url = "https://your-domain.com"

# Secrets (use environment variables or AWS Secrets Manager in production)
jwt_secret         = "your-super-secret-jwt-key-change-this-in-production"
jwt_refresh_secret = "your-super-secret-refresh-key-change-this-in-production"

# Lambda Configuration (optional, defaults are fine for most cases)
lambda_memory_size = 512   # MB (128-10240)
lambda_timeout     = 30    # seconds (1-900)

# Additional Tags
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Application = "ChatApp"
}
